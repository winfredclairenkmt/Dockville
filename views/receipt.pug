doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='/my_css/receipt.css')
    title Receipt 
  body
    .receipt
      p.head.h1 Dockville day and night parking
      h5 Parking receipt
      p Receipt number: #{car.receipt}
      p Name: #{car.drivername}
      p Number plate: #{car.numberplate}
      p Date: #{car.date}
      p Bill in UGX: #{car.charge}
      p NIN: #{car.nin}
      p Model: #{car.carmodel}

