doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
  link(rel='stylesheet' href='/my_css/carform.css')
  title Car register
header
  nav.navbar.navbar-expand-lg.bg-body-tertiary
    .container-fluid
      a#logo.navbar-brand(href='landing.pug')
        img#image(src='/Images/logo.png')
        | Dockville
      button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarSupportedContent.collapse.navbar-collapse
        ul.navbar-nav.me-auto.mb-2.mb-lg-0
          li.nav-item
            a.nav-link(href='/cardash.pug') Parking services
          li.nav-item
            a.nav-link(href='/api/cardash') Back  
.box
  .card
    .card-body
      h4.title Parking Unit
      form#formId.parking-form(name='car' action='/api/regCar' method='POST' onsubmit='return Validate(event)')
        .row
          .col
            label(for='drivername') Driver&apos;s name
            input#drivername.form-control(type='text' aria-label='First name' name='drivername')
            span#driverNameError
          .col
            label.form-label(for='gender') Gender
            select#gender.form-select(aria-label='Default select example' name='gender' )
              option(value='' ) select
              option(value='male') Male
              option(value='female') Female
            span#genderError
          .row
            .col
              label(for='telephone') Telephone
              input#telephone.form-control(type='text' aria-label='telephone' name='telephone')
              span#telephoneError
            .col
              label(for='numberplate') Number plate
              input#numberplate.form-control(type='text' aria-label='numberplate' name='numberplate')
              span#numberplateError
          .row
            .col
              label.form-label(for='cartype') Car type
              select#cartype.form-select(aria-label='Default select example' name='cartype')
                option(value='') select
                option(value='coasters') Coaster
                option(value='trucks') Truck
                option(value='taxi') Taxi
                option(value='personalcar') Personal car
                option(value='boda') Boda
              span#cartypeError  
            .col
              label.form-label(for='nin') NIN
              input#nin.form-control(type='text' aria-label='nin' name='nin')
              span#ninError
          .row
            .col
              label(for='car model') Model
              input#carmodel.form-control(type='text' aria-label='model' name='carmodel')
              span#carmodelError
            .col
              label(for='colour') Colour
              input#colour.form-control(type='text' aria-label='colour' name='colour')
              span#colourError
          .row
            .col
              label(for='date') Date
              input#date.form-control(type='date' aria-label='date' name='date')
              span#dateError
            .col
              label(for='time') Time-in
              input#timein.form-control(type='time' aria-label='time' name='timein')
              span#timeinError
          .row
            .col
              label.form-label(for='parkingtype') Parking type
              select#parkingtype.form-select(aria-label='Default select example' name='parkingtype')
                option(selected='') select
                option(value='day') Day
                option(value='night') Night
                option(value='less3hrs') Less than 3hrs
            .col
              label.form-label(for='timeout') Time-out
              input#timeout.form-control(type='time' aria-label='timeout' name='timeout')
              span#timeoutError
          .row
            .col
              label.form-label(for='charge') Charge
              input#charge.form-control(type='charge' aria-label='charge' name='charge')
              span#chargeError
            .col
              label.form-label(for='receipt')  Receipt
              input#receipt.form-control(type='receipt' aria-label='receipt' name='receipt')
              span#receiptError
          button.btn.signin(type='submit' text='white') Submit
footer
  footer.footer(style='background-color: black; color: white; height: 150px; text-align: center;')
