doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='/bootstrap-5.3.1-dist/css/bootstrap.css')
  link(rel='stylesheet' href='/my_css/forms.css')
  title Car
header
  // this is where the navbatr starts
  nav.navbar.navbar-expand-lg.bg-body-tertiary
    .container-fluid
      a#logo.navbar-brand(href='landing.pug')
        img#image(src='/Images/logo.png')
        | Dockville
      button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarSupportedContent.collapse.navbar-collapse
        ul.navbar-nav.me-auto.mb-2.mb-lg-0
          li.nav-item
            a.nav-link.active(aria-current='page' href='')
          li.nav-item
            a.nav-link(href='parkdash.pug') Parking services
          li.nav-item
            a.nav-link(href='batterydash.pug') Battery hire
          li.nav-item
            a.nav-link(href='tyredash.pug') Tyre clinic
// this is where the navbar ends
// parking form
section
  .container.py-5
    .row
      .col-md-6
        .card.card-registration.card-registration-1
          .card-body.p-5
            h3.fw-normal.mb-5(style='color: black;') Client Information
            // Client Information content
            //- (method='post' action='/api/car')
            .form-group
              label.form-label(for='nameOfDriver')
                | Name of Driver 
                span.required-field *
              input#nameOfDriver.form-control.form-control-lg(type='text')
            .form-group
              label.form-label(for='tel')
                | Telephone number
                span.required-field *
              input#tel.form-control.form-control-lg(type='text')
            .form-group
              label.form-label(for='nin') NIN
              input#nin.form-control.form-control-lg(type='text')
            .form-group
              div
                label.form-label Gender
                br
                .form-check.form-check-inline
                  input#male.form-check-input(type='radio' name='gender' value='male')
                  label.form-check-label(for='male') Male
                .form-check.form-check-inline
                  input#female.form-check-input(type='radio' name='gender' value='female')
                  label.form-check-label(for='female') Female
            .row
              .col
                .form-group
                  label.form-label(for='timein')
                    | Time-in 
                    span.required-field *
                  input#timein.form-control.form-control-lg(type='time')
              .col
                .form-group
                  label.form-label(for='timeout')
                    | Time-out 
                    span.required-field *
                  input#timeout.form-control.form-control-lg(type='time')
              .row
                .col-md-6.mb-4.pb-2
                  .form-group
                    #dateForm
                      label(for='date') Select a date:
                      input#date(type='date')
      .col-md-6
        .card.card-registration.card-registration-2
          .card-body.p-5
            h3.fw-normal.mb-5(style='color: black;') Car Details
            // Car Details content
            .row
              .col
                .form-group
                  label.form-label(for='carcolour')
                    | Car colour 
                    span.required-field *
                  input#carcolour.form-control.form-control-lg(type='text')
              .col
                .form-group
                  label.form-label(for='numberplate')
                    | Number plate 
                    span.required-field *
                  input#numberplate.form-control.form-control-lg(type='text')
            .row
              .col
                .form-group
                  label.form-label(for='cartype')
                    | Car type 
                    span.required-field *
                  select#cartype.form-control.form-control-lg
                    option(value='' selected='' disabled='') Select a car type
                    option(value='taxi') Taxi
                    option(value='truck') Truck
                    option(value='personalcar') Personal Car
                    option(value='coaster') Coaster
                    option(value='boda') Boda
              .col
                .form-group
                  label.form-label(for='carmodel')
                    | Car model 
                    span.required-field *
                  input#carmodel.form-control.form-control-lg(type='text')
            .form-group
              label.form-label(for='parkingoptions') Services
              select#parkingoptions.form-control.form-control-lg
                option(value='' selected='' disabled='') Select a service
                option(value='dayparking') Day Parking
                option(value='nightparking') Night Parking
                option(value='lessthan3hours') Less than 3 hours
            .form-group
              label.form-label(for='charge') Charge
              input#charge.form-control.form-control-lg(type='text' placeholder='Charge')
            .form-group
              label.form-label(for='receipt') Receipt
              input#receipt.form-control.form-control-lg(type='text' placeholder='Receipt')
            br
            input.btn.btn-light.btn-lg(type='submit' data-mdb-ripple-color='dark' value='Submit')
footer.footer(style='background-color: black; color: white; height: 150px; text-align: center;')
