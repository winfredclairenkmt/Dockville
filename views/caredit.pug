doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
  link(rel='stylesheet' href='style.css')
  title Car edit
header
  nav.navbar.navbar-expand-lg.bg-body-tertiary
    .container-fluid
      a#logo.navbar-brand(href='landing.pug')
        img#image(src='/public/Images/logo.png')
        | Dockville
      button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarSupportedContent.collapse.navbar-collapse
        ul.navbar-nav.me-auto.mb-2.mb-lg-0
          li.nav-item
            a.nav-link.active(aria-current='page' href='')
          li.nav-item
            a.nav-link(href='parkdash.pug') Parking services
          li.nav-item
            a.nav-link(href='batterydash.pug') Battery hire
          li.nav-item
            a.nav-link(href='tyredash.pug') Tyre clinic
.box
  .card
    .card-body
      h4.title Parking Unit
      form#formId.parking-form(name='editCar' action='/api/register/edit?id='+car._id method='POST' onsubmit='return Validate(event)')
        .row
          .col
            label(for='drivername') Driver&apos;s name
            input.form-control(type='text' aria-label='First name' name='drivername' value=car.drivername disabled='')
            span#driverNameError
          .col
            label.form-label(for='lastname') Gender
            select#gender.form-select(aria-label='Default select example' value=car.gender disabled='')
              option(value='male') Male
              option(value='female') Female
          .row
            .col
              label(for='telephone') Telephone
              input#telephone.form-control(type='text' aria-label='telephone' name='telephone' value=car.telephone disabled='')
              span#telephoneError
            .col
              label(for='numberplate') Number plate
              input#numberplate.form-control(type='text' aria-label='numberplate' name='numberplate' value=car.numberplate disabled='')
              span#numberplateError
          .row
            .col
              label.form-label(for='cartype') Car type
              select#cartype.form-select(aria-label='Default select example' value=car.cartype disabled='')
                option(selected='' disabled='') select
                option(value='coasters') Coaster
                option(value='trucks') Truck
                option(value='taxi') Taxi
                option(value='personalcar') Personal car
                option(value='boda') Boda
            .col
              label.form-label(for='nin') NIN
              input#nin.form-control(type='text' aria-label='nin' name='nin' value=car.nin disabled='')
              span#ninError
          .row
            .col
              label(for='car model') Model
              input#carmodel.form-control(type='text' aria-label='model' name='carmodel' value=car.carmodel disabled='')
              span#carmodelError
            .col
              label(for='color') Color
              input#color.form-control(type='text' aria-label='color' name='color' value=car.color disabled='')
              span#colorError
          .row
            .col
              label(for='date') Date
              input#date.form-control(type='date' aria-label='date' name='date' value=car.date disabled='')
              span#dateError
            .col
              label(for='time') Time-in
              input#timein.form-control(type='time' aria-label='time' name='timein' value=car.timein disabled='')
              span#timeinError
          .row
            .col
              label.form-label(for='parkingtype') Parking type
              select#parkingtype.form-select(aria-label='Default select example' value=car.parkingtype disabled='')
                option(selected='') select
                option(value='day') Day
                option(value='night') Night
                option(value='less3hrs') Less than 3hrs
            .col
              label.form-label(for='timeout') Time-out
              input#timeout.form-control(type='time' aria-label='timeout' value=car.timeout name='timeout')
              span#timeoutError
          .row
            .col
              label.form-label(for='charge') Charge
              input#charge.form-control(type='charge' aria-label='charge' name='charge' value=car.charge disabled='')
              span#chargeError
            .col
              label.form-label(for='receipt')  Receipt
              input#receipt.form-control(type='receipt' aria-label='receipt' name='receipt' value=car.receipt disabled='')
              span#receiptError
          button.btn.signin(type='submit' text='white') Submit
footer
  footer.footer(style='background-color: black; color: white; height: 150px; text-align: center;')
